<h1>Listing requests</h1>
<!-- Button trigger modal -->





  <script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
    $('#example').dataTable({
      "sPaginationType": "bootstrap",
      "aaSorting": [[ 2, "desc" ]]
    });
  });
  </script>




<table id="example" class="datatable table table-hover table-condensed">
  <thead>
    <tr>
      <th>Query</th>
      <th>Email</th>
      <th>Created Date</th>
      <th>Window</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td>
        <%= build_modal(request) %>
        </td>
        <td><%= request.email %></td>
        <td><%= request.created_at %></td>
        <td><%= request.start_time %> - <%= request.end_time %></td>

        <td> <%= build_download_url request %></td>

        <td>
          <%= link_to 'Show', request,:class => "glyphicon glyphicon-search" %>
          <%= link_to 'Edit', edit_request_path(request),:class => "glyphicon glyphicon-cog"  %>
          <%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' },:class => "glyphicon glyphicon-remove"  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path, :class => "btn btn-default" %>
